<%- model_class = Libro -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:isbn) %>:</strong></dt>
  <dd><%= @libro.isbn %></dd>
  <dt><strong><%= model_class.human_attribute_name(:titulo) %>:</strong></dt>
  <dd><%= @libro.titulo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @libro.descripcion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stock) %>:</strong></dt>
  <dd><%= @libro.stock %></dd>
  <dt><strong><%= model_class.human_attribute_name(:costo) %>:</strong></dt>
  <dd><%= @libro.costo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:editorial) %>:</strong></dt>
  <dd><%= @libro.editorial %></dd>
  <dt><strong><%= model_class.human_attribute_name(:autor) %>:</strong></dt>
  <dd><%= @libro.autor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:clasificacion) %>:</strong></dt>
  <dd><%= @libro.clasificacion %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              libros_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_libro_path(@libro), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              libro_path(@libro),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
            
